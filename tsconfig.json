{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "ts-node": {
    "transpileOnly": true
  }
}
